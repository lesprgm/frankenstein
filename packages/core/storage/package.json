{
  "name": "@memorylayer/storage",
  "version": "0.1.0",
  "description": "Storage layer abstraction for MemoryLayer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "migrate": "./dist/migrations/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "mkdir -p dist/migrations && cp src/migrations/*.sql dist/migrations/ 2>/dev/null || true",
    "test": "vitest --run",
    "test:watch": "vitest",
    "migrate": "node dist/migrations/cli.js"
  },
  "keywords": [
    "storage",
    "postgres",
    "vectorize",
    "memorylayer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "better-sqlite3": "latest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@types/better-sqlite3": "^7.6.0"
  }
}